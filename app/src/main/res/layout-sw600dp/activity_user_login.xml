<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:background="@color/colorLightBack"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/userpininput_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Base.Widget.AppCompat.ActionBar"
            android:background="@color/colorPrimaryDark"
            app:navigationIcon="@drawable/cancela" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorDarkBack">

        <TextView
            android:id="@+id/userpininput_username"
            android:textSize="24dp"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/colorCardText"
            android:background="@color/colorLightBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingEnd="6dp"
            android:background="@color/colorLightBack"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userpininput_digit1"
                android:layout_width="0dp"
                android:textSize="16dp"
                android:src="@drawable/circle_empty"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/userpininput_digit2"
                android:layout_width="0dp"
                android:textSize="16dp"
                android:src="@drawable/circle_empty"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/userpininput_digit3"
                android:layout_width="0dp"
                android:textSize="16dp"
                android:src="@drawable/circle_empty"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/userpininput_digit4"
                android:layout_width="0dp"
                android:textSize="16dp"
                android:src="@drawable/circle_empty"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorLightBack"
            >
            <EditText
                android:id="@+id/userpininput_inputdigits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="2dp"
                android:textColor="@color/colorLightBack"
                android:background="@color/colorLightBack"
                android:maxLength="4"
                android:visibility="visible" >
            </EditText>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>