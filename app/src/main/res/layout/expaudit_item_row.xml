<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expaudit_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    cardview:cardCornerRadius="0dp"
    cardview:cardElevation="0dp"
    cardview:cardUseCompatPadding="true"
    android:backgroundTint="@color/colorLightBack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_weight="12"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/expaudit_col1"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:paddingStart="3dp"
                android:textColor="#000"
                android:textSize="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true" />
            <TextView
                android:id="@+id/expaudit_col2"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#000"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/expaudit_col3"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:textColor="#000"

                android:textSize="12dp" />
            <TextView
                android:id="@+id/expaudit_col4"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:paddingEnd="3dp"
                android:textSize="12dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>