<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="2dp"
    cardview:cardUseCompatPadding="true"
    android:backgroundTint="@color/colorLightBack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/mfg_rece_item_desc"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="RICOTA ENTERA"
            android:textAllCaps="true"
            android:textColor="#444"
            android:textSize="14dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/mfg_rece_item_dosis_b1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:text="12.5%"
                android:textColor="#444"
                android:textSize="16dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/mfg_rece_item_dosis"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="258"
                android:textAlignment="textEnd"
                android:paddingEnd="6dp"
                android:textColor="#444"
                android:textSize="16dp"
                android:fontFamily="sans-serif-condensed"/>

            <TextView
                android:id="@+id/mfg_rece_item_unit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="gr"
                android:textColor="#444"
                android:textSize="16dp"
                android:fontFamily="sans-serif-condensed"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>