<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="2dp"
    cardview:cardUseCompatPadding="true"
    android:backgroundTint="@color/colorLightBack">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rotulo_thumb"
            android:layout_width="60dp"
            android:layout_height="@dimen/mpRvItemHeight"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:src="@drawable/no_image_3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mpRvItemHeight"
            android:layout_toEndOf="@+id/rotulo_thumb"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/ruta_map"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mpRvItemHeight"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="01/04"
                android:textColor="#444"
                android:textSize="30dp"
                android:textStyle="normal" />

            <TextView
            android:id="@+id/ruta_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@id/ruta_map"
            android:text="abcdefghijklmnopqrstuvwxyz"
            android:textAllCaps="true"
            android:textColor="#444"
            android:textSize="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ruta_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ruta_cliente"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="1dp"
            android:layout_marginLeft="8dp"
            android:text="Proveedor"
            android:textColor="#444"
            android:textSize="16dp"
            android:textStyle="normal" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>