<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="2dp"
    cardview:cardUseCompatPadding="true"
    android:backgroundTint="@color/colorLoginBck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">
        <TextView
            android:id="@+id/plot_mpnombre"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Materia prima"
            android:textAllCaps="true"/>

        <ToggleButton
            android:id="@+id/plot_button1"
            android:layout_width="0dp"
            android:background="@drawable/mplot_bck"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAllCaps="true"
            />

        <ToggleButton
            android:id="@+id/plot_button2"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:clickable="false"
            android:layout_height="wrap_content"
            android:background="@drawable/mplot_bck"
            android:textAllCaps="true"/>

        <ToggleButton
            android:id="@+id/plot_button3"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/mplot_bck"
            android:textAllCaps="true"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>