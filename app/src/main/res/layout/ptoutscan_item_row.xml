<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    cardview:cardBackgroundColor="#D0363636"
    cardview:cardCornerRadius="0dp"
    cardview:cardElevation="0dp"
    cardview:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">

        <TextView
            android:id="@+id/ptoutscan_entry_descripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="6"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Rav espinaca"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/ptoutscan_entry_loteint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="3"
            android:maxLines="1"
            android:singleLine="true"
            android:text="01/01"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/ptoutscan_entry_cantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/ptoutscan_entry_loteint"
            android:layout_weight="3"
            android:maxLines="1"
            android:singleLine="true"
            android:text="999"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textStyle="normal" />
    </LinearLayout>
</androidx.cardview.widget.CardView>