<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:backgroundTintMode="screen"
    android:paddingTop="6dp"
    android:paddingBottom="3dp"
    cardview:cardBackgroundColor="#FFEE58"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="2dp"
    cardview:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recein_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/recein_descripcion"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="RELL"
            android:textColor="#444"
            android:textSize="14dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/recein_alergen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/recein_type"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="VEG"
            android:textColor="#444"
            android:textSize="14dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/recein_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:text="RELL RAV RICOTA Y ESPINACA"
            android:textAllCaps="true"
            android:textColor="#444"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recein_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recein_descripcion"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="1dp"
            android:singleLine="true"
            android:text="2019-11-01"
            android:textColor="#444"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/recein_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recein_descripcion"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="8dp"
            android:background="@color/colorPrimaryDark"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:maxLines="1"
            android:padding="1dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:singleLine="true"
            android:text="Etiqueta de seguimiento"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorAccent"
            android:textSize="16dp"
            android:textStyle="normal" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>