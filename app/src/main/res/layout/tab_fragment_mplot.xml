<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plot_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mplot_today"
                android:background="@color/colorTabBarInd"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mplot_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                tools:backgroundTint="@color/colorLightBack" />
        </LinearLayout>
        <Button
            android:id="@+id/mpLotDisplayMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LISTA COMPLETA"
            android:layout_gravity="bottom"
            android:textColor="@color/colorCardText"
            android:background="@color/colorLoginBck"/>
    </FrameLayout>
</LinearLayout>