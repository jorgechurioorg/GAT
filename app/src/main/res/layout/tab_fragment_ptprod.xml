<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plot_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorLightBack">
            <TextView
                android:id="@+id/ptprod_today"
                android:clickable="true"
                android:background="@color/colorCardText"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ptprod_sethojadate"
                android:visibility="gone"
                android:inputType="number"
                android:background="@color/colorPrimary"
                android:textSize="20dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ptprod_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                tools:backgroundTint="@color/colorLightBack" />
        </LinearLayout>

</LinearLayout>