<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">

    </style>
    <style name="theme_popupdialog_style" parent="@android:style/Theme.Dialog"></style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Autocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView" />
    <style name="table_cell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="keyboard_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:showDividers">beginning|middle|end</item>
    </style>

    <style name="keyboard_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/boton_redondeado</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="ptout_input">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="mpin_card">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorCardText</item>
    </style>
    <style name="keyboard_number_button" parent="keyboard_button">
        <item name="android:tag">number_button</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="mfg_main_column">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@color/colorClose</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="mfg_main_stage_title">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">16dp</item>

    </style>
    <style name="mfg_main_div_vertical">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>

    </style>
    <style name="mfg_op_in_cardview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">@color/colorAccent</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

</resources>
